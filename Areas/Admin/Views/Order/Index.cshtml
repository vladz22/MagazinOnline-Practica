@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var inprocess = "text-primary";
    var pending = "text-primary";
    var completed = "text-primary";
    var rejected = "text-primary";
    var all = "text-primary";

    switch(status)
    {
        case "inprocess": inprocess = "active text-white";break;
        case "pending": pending = "active text-white"; break;
        case "completed": completed = "active text-white"; break;
        case "rejected": rejected = "active text-white"; break;
        default:
        case "all": all = "active text-white"; break;
    }
    }

<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary"> Lista de Comenzi</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                <li class="list-group-item  @inprocess">In process</li>
                </a>

                <a style="text-decoration:none;" asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                <li class="list-group-item @pending">Pending</li>
                </a>

                <a style="text-decoration:none;" asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                <li class="list-group-item @completed">Completed</li>
                </a>

                <a style="text-decoration:none;" asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-status="rejected">
                <li class="list-group-item  @rejected">Rejected</li>
                </a>

                <a style="text-decoration:none;" asp-area="Admin" asp-controller="Order" asp-action="Index" asp-route-status="all">
                <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>
    </div>
    <br /> <br />

    <table id="table" class="table table-striped table-bordered table-dark" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nume</th>
                <th>Adresa</th>
                <th>Oras</th>
                <th>Tara</th>
                <th>OrderTotal</th>
                <th>OrderStatus</th>
                <th>Email</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/Order.js"></script>
}
