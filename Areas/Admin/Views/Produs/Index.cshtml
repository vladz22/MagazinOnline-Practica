    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container bg-light">
    <div class="row">
        <div class="col-10">
            <h2 class="text-dark">Lista Produse</h2>
        </div>
