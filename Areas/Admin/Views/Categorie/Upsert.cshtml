@model MagazinOnline.Modele.Categorie
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titlu = "Creaza Categorie";
}
<form method="post">
    <div class="row p-3 border bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            //pentru edit
            titlu = "Editeaza Categorie";
            <input type="hidden" asp-for="Id" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-dark">@titlu</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="text-dark" asp-for="Nume"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nume" class="form-control" />
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id!= 0)
                    {
                        <partial name="EditAndBack_PartialView" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="CreateAndBack_PartialView" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
} 