@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container bg-light">
    <div class="row">
        <div class="col-10">
            <h2 class="text-dark">Lista Companie</h2>
        </div>
        <div class="col-2 text-right">
            <a class="btn btn-outline-dark" asp-controller="Companie" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Creaza o companie noua</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="table" class="table table-striped table-bordered table-dark" style="width:100%">
            <thead>
                <tr>
                    <th>Nume</th>
                    <th>Adresa</th>
                    <th>Oras</th>
                    <th>Tara</th>
                    <th>CodPostal</th>
                    <th>NrTelefon</th>
                    <th>Autorizat</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/Companie.js"></script>
}
